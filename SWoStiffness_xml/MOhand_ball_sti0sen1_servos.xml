<!-- settings -->
    <compiler inertiafromgeom="true" angle="degree">
      <lengthrange uselimit="true"/>
    </compiler>
    <option timestep="0.01"  iterations="50" solver="Newton" gravity=" 0 0 -9.8" tolerance="1e-10">
          <flag gravity="enable" contact="enable" passive="enable"/>
    </option>
    <size njmax="5000" nconmax="1000" nstack="200000"/>
    <visual>
        <rgba haze=".3 .3 .3 1"/>
        <global fovy="4" ipd="1" />
    </visual>
<!-- defaults -->
    <default>
        <joint limited="true" stiffness= "0" damping=".005" frictionloss="2"/>
		<!-- <geom conaffinity="0" condim="3" contype="1" friction=".4 .1 .1" rgba="0.8 0.6 .4 1" solimp="0.0 0.8 0.01" solref="0.02 1"/> -->
        <geom friction="1 .05 .001" condim="3"/>
        <position ctrllimited="true" gear="1" kp=".05"/>
    </default>
<!-- assets -->
    <asset>
        <texture name="texmarble" type="cube" file="ball.png"/>
        <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2="0.7 0.7 .7" width="512" height="512"/>
        <material name="matmarble" texture="texmarble" rgba="1 1 1 1" />
	    <texture builtin="gradient" height="100" rgb1="1 1 1" rgb2="0 0 0" type="skybox" width="100"/>
	    <texture builtin="flat" height="1278" mark="cross" markrgb="1 1 1" name="texgeom" random="0.01" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" type="cube" width="127"/>
	    <texture builtin="checker" height="100" name="texplane" rgb1="0 0 0" rgb2="0.8 0.8 0.8" type="2d" width="100"/>
	    <material name="MatPlane" reflectance="0.5" shininess="1" specular="1" texrepeat="60 60" texture="texplane"/>
	    <material name="geom" texture="texgeom" texuniform="true"/>
	    </asset>
<!-- world body -->
    <worldbody>
	    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 .3" specular=".1 .1 .1"/>
	    <geom conaffinity="1" condim="3" name="floor" pos="0 0 0" rgba="0.5 0.7 0.6 1" size="1 0 0.1" type="plane"
         solref='0.01 0.01' friction='.1 .1'/>

<!-- hand -->
        <body name='hand' pos="0 0 0.2">
            <camera name="track" mode="fixed" pos="0 -0.5 0" xyaxes="1 0 0 0 0 1" 
              fovy="40" ipd="1"/>
            <geom name="palm" pos="0 0 0.01" type="cylinder" size="0.06 0.001" rgba="1 1 1 .125"/>
            <joint name="palm" type="slide" axis="0 0 1" limited="true" range="-.08 .05" damping="1"/>
<!-- finger1 -->
	<!-- MCP1 -->
            <body name= "Finger1" pos="-.04 0.025 0">
                <joint type ="hinge" name="MCP1" pos="0 0 0" axis="0 1 0" range="-45 45"/>
                <geom name="fin1" type="cylinder" pos="0 0 0" zaxis="0 1 0" size=".01 .005" rgba="1 1 1 .5"/>
                <geom name="L0" type="capsule" size="0.005" fromto="0 0 0  0 0 -.05" rgba=".7 .7 .7 1"/>
    <!-- PIP1 -->           
	            <body pos="0 0 -0.05">
	                <joint type ="hinge" name="PIP1" pos="0 0 0" axis="0 1 0" range="-90 0"/>
	                <geom name="PIP1" type="cylinder" pos="0 0 0" zaxis="0 1 0" size=".01 .005" rgba="1 1 1 .5"/>
	                <body pos="0 0 0">
	                  <body pos="0 0 0">
	                    <geom name="PIP1_FS" fromto="0.001 0 -.03 0.001 0 -0.05" type="capsule" size="0.0045"  rgba="0.3 0.2 0.1 0.3" mass="0.0"/>
	                    <site name="sensorfig1"  fromto="0.001 0 -.03 0.001 0 -0.05" type="capsule" size="0.0045"  rgba="0.3 0.2 0.1 0.3"/>
	                  </body>
	                </body>
	                <geom name="L1" type="capsule" size="0.005" fromto="0 0 0 0 0 -0.05" rgba=".7 .7 .7 1"/>
	             </body>
        	</body>
<!-- finger2 -->
	<!-- MCP2 -->
            <body name="Finger2"  pos= "-0.04 -0.025 0">
                <joint type ="hinge" name="MCP2"  pos="0 0 0" axis="0 1 0 " range="-45 45"/>
                <geom name="fin2" type="cylinder" pos="0 0 0" zaxis=" 0 1 0" size=".01 .005" rgba="1 1 1 .5"/>
	            <geom name="L21" type="capsule" size="0.005" fromto="0 0 0  0 0 -.05" rgba=".7 .7 .7 1"/>
	            <body pos="0 0 -0.05">
                <joint type ="hinge" name="PIP2" pos="0 0 0" axis="0 1 0 " range="-90 0"/>
                <geom name="PIP2" type="cylinder" pos="0 0 0" zaxis="0 1 0" size=".01 .005" rgba="1 1 1 .5"/>
    <!-- PIP2 -->  
                <body pos="0 0 0">
                    <body pos="0 0 0">
                        <geom name="PIP2_FS" fromto="0.001 0 -.03 0.001 0 -0.05" type="capsule" size="0.0045"  rgba="0.3 0.2 0.1 0.3" mass="0.0"/>
                        <site name="sensorfig2"  fromto="0.001 0 -.03 0.001 0 -0.05" type="capsule" size="0.0045"  rgba="0.3 0.2 0.1 0.3"/>
                    </body>
                </body>
                <geom name="L22" type="capsule" size="0.005" fromto="0 0 0 0 0 -0.05" rgba=".7 .7 .7 1"/>
            	</body>
            </body>
<!-- thumb -->
	<!-- MCP3 -->
            <body name="thumb" pos=".04 0 0">
              <joint type ="hinge" name="MCP3"  pos="0 0 0" axis="0 1 0 " range="-45 45"/>
              <geom name="fin3" type="cylinder" pos="0 0 0" zaxis=" 0 1 0" size=".01 .005" rgba="1 1 1 .5"/>
              <geom name="L31" type="capsule" size="0.005" fromto="0 0 0  0 0 -.05" rgba=".7 .7 .7 1"/>
    <!-- PIP3 -->          
                <body pos="0 0 -0.05">
                    <joint type ="hinge" name="PIP3" pos="0 0 0" axis="0 1 0 " range="0 90"/>
                    <geom name="PIP3" type="cylinder" pos="0 0 0" zaxis="0 1 0" size=".01 .005" rgba="1 1 1 .5"/>
                    <body pos="0 0 0">
                        <body pos="0 0 0">
                            <geom name="PIP3_FS" fromto="-0.001 0 -.03 -0.001 0 -0.05" type="capsule" size="0.0045"  rgba="0.3 0.2 0.1 0.3" mass="0.0"/>
                            <site name="sensorfig3"  fromto="-0.001 0 -.03 -0.001 0 -0.05" type="capsule" size="0.0045"  rgba="0.3 0.2 0.1 0.3"/>
                        </body>
                    </body>
                    <geom name="L32" type="capsule" size="0.005" fromto="0 0 0 0 0 -0.05" rgba=".7 .7 .7 1"/>
                </body>
            </body>
        </body>
<!-- ball -->
		<body name = "ball" pos= "0 0 0">
		    <geom type="sphere" material="matmarble" size="0.035" mass=".005"/>
		    <joint name="rootx" type="slide" armature="0" axis="1 0 0"  damping=".07" frictionloss="0" limited="false" stiffness="1" />
		    <joint name="rootz" type="slide" armature="0" axis="0 0 1" damping="0.5" frictionloss="0" limited="false" stiffness="0"/>
		    <joint name="roty" type="hinge" armature="0" axis="0 1 0 " damping="0.0005"  limited="false"  frictionloss= "0" stiffness="0"/>
		    <site name="Sb1" pos=".04 0 0" size="0.005" rgba="0.55 0.78 0.55 1"/>
		</body>
    </worldbody>
<!-- actuators -->
    <actuator >
    	  <position kp="25" ctrllimited="true" ctrlrange="-.08 .05" joint="palm" name="palm"/>

		  <position joint="MCP1" name="MCP1" ctrlrange="-.78 .78"/>
          <position joint="PIP1" name="PIP1" ctrlrange="-1.57 0"/>

          <position joint="MCP2" name="MCP2" ctrlrange="-.78 .78"/>      
          <position joint="PIP2" name="PIP2" ctrlrange="-1.57 0"/>

          <position gear="-1" joint="MCP3" name="MCP3" ctrlrange="-.78 .78"/>
          <position gear="-1" joint="PIP3" name="PIP3" ctrlrange="-1.57 0"/>
    </actuator>
<!-- sensors -->
	
	<!-- 1D sensors -->
  <sensor>
       <touch name="touchsensor1" site="sensorfig1" />
       <touch name="touchsensor2" site="sensorfig2" />
       <touch name="touchsensor3" site="sensorfig3" />
  </sensor>

	<!-- 3D sensors -->
  <!-- <sensor> 
           <force name="touchsensor1" site="sensorfig1" />
           <force name="touchsensor2" site="sensorfig2" />
           <force name="touchsensor3" site="sensorfig3" />
  </sensor> -->
</mujoco>
